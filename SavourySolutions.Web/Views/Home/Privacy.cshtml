@using SavourySolutions.Models.ViewModels.Privacy
@model PrivacyDetailsViewModel
@{
    this.ViewData["Title"] = "Privacy Policy";
}

<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>Privacy Policy</h1>
            </div>
        </div>
    </div>
</div>
<!-- End All Pages -->
<div class="privacy-box mt-80">
    <div class="container">
        @if (Model != null)
        {
            <p>@Html.Raw(Model.SanitizedPageContent)</p>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                Privacy content has not been set.
            </div>
        }
    </div>

    <partial name="_ContactsInfoPartial" />
</div>

<a href="#" id="back-to-top" title="Back to top" style="display: none;">
    <i class="fas fa-angle-double-up" aria-hidden="true"></i>
</a>

<a asp-controller="Home" asp-action="Chat" id="chat-btn" title="Chat" style="display: none;">
    <i class="fas fa-comment" aria-hidden="true"></i>
</a>
